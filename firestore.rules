
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Lobbies
    match /lobbies/{lobbyId} {
      
      // Anyone authenticated can read lobby data
      allow read: if request.auth != null;
      
      // Anyone authenticated can create a lobby
      allow create: if request.auth != null;

      // Host can update anything, players can only update the players list to join/leave.
      allow update: if request.auth != null &&
                      (request.auth.uid == resource.data.hostId ||
                       (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['players']) &&
                        (request.resource.data.players.size() == resource.data.players.size() + 1 ||
                         request.resource.data.players.size() == resource.data.players.size() - 1)));

      // Allow host to delete the lobby
      allow delete: if request.auth.uid == resource.data.hostId;
    }
  }
}
