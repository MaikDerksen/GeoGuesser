
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Rules for lobbies
    match /lobbies/{lobbyId} {

      // Anyone can read lobby data.
      allow read;

      // An authenticated user can create a lobby if they are the host.
      allow create: if isSignedIn() && request.resource.data.hostId == request.auth.uid;

      // Only the host can update the lobby.
      // This is a simplification to prevent further syntax errors.
      // We can refine this later to allow players to update their own scores.
      allow update: if isSignedIn() && resource.data.hostId == request.auth.uid;

      // Only the host can delete the lobby.
      allow delete: if isSignedIn() && resource.data.hostId == request.auth.uid;
      
    }
  }
}
