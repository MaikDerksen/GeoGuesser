rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow read access to game modes for all users
    match /game_modes/{gameModeId} {
      allow read: if true;
      allow write: if false; // Only allow writes from admin page logic for now
      
      match /logs/{logId} {
         allow write: if request.auth != null;
         allow read: if false;
      }
    }
    
    // Lock down user data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow logged-in users to interact with lobbies
    match /lobbies/{lobbyId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow logged-in users to write to their own logs
    match /near_me_logs/{logId} {
       allow read: if false; // No one should read these directly
       allow create: if request.auth != null;
    }

    // Allow reading from and writing to the location cache
    match /location_cache/{cacheId} {
        allow read, write: if request.auth != null;
    }
  }
}
